{
  "compilerOptions": {
    "target": "es5",
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "ESNext"
    ],
    "declaration": true,
    "module": "ES6",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": [
    "src",
    "shims.d.ts"
  ]
}